<nav class="bg-white">
  <div class="w-full mx-auto px-2 sm:px-6 lg:px-8 shadow-sm">
    <div class="relative flex items-center justify-between h-16">
      <div class="nav-main absolute inset-y-0 left-0 flex items-center sm:hidden">
        {{!--        Mobile menu button--}}
        <button type="button"
                class="nav-main__button-mobile-menu inline-flex items-center justify-center p-2 rounded-md text-gray-400
                focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white invisible"
                aria-controls="mobile-menu" aria-expanded="false"
          {{on 'click' this.changeMobileMenuVisibility}}
        >
          <span class="sr-only">{{t "navbar.nav-main.button-mobile-menu.description"}}</span>

          <svg class="nav-main__button-mobile-menu--closed block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none"
               viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="nav-main__button-mobile-menu--opened hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg"
               fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink flex items-center">
          <LinkTo @route="index" class="nav-link block px-3 py-2 rounded-md text-base font-medium" aria-current="page">
            <img class="hidden lg:block h-8 w-auto"
                   src="https://tailwindui.com/img/logos/workflow-logo-indigo-500-mark-white-text.svg"
                   alt="{{t "links.home-logo"}}"
            >
          </LinkTo>
          <div class="nav-main__language-picker absolute left-10 sm:left-16 flex items-center pr-2 sm:inset-auto sm:ml-6 md:ml-12 sm:pr-0">
            <div class="inline-flex">
              <LanguagePicker/>
            </div>
          </div>

          <LinkTo @route="index" class="nav-link block lg:hidden pl-3 pr-16 py-2 rounded-md text-base font-medium" aria-current="page">
            <img class="block  h-8 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-500.svg"
                 alt="{{t "links.home-logo"}}">
          </LinkTo>
        </div>
        <div class="nav-main__link nav-links hidden sm:block sm:mx-auto invisible">
          <div class="flex space-x-4">
            {{!--             Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white"--}}
            {{!--            <a href="#" class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" aria-current="page">Dashboard</a>--}}
            <LinkTo @route="index" class="nav-link block px-3 py-2 rounded-md text-sm font-medium" aria-current="page">
              {{t "links.home"}}
            </LinkTo>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <div class="inline-flex rounded-md shadow">
          <a href="#contact-form"
             class="nav-main__contact-button inline-flex items-center justify-center
             px-3 py-2 border border-transparent text-base font-medium rounded-md"
          >
            {{t "navbar.nav-main.contact.text"}}
          </a>
        </div>
      </div>
    </div>
  </div>

  {{!--  Mobile menu, show/hide based on menu state.--}}
  <div class="sm:hidden hidden bg-white shadow-lg" id="mobile-menu">
    <div class="nav-links px-2 pt-2 pb-3 space-y-1">
      {{!--       Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white"--}}
      {{!--      <a href="#" class="bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium">Home</a>--}}
      <LinkTo @route="index" class="nav-link block px-3 py-2 rounded-md text-base font-medium" aria-current="page">
        {{t "links.home"}}
      </LinkTo>
    </div>
  </div>
</nav>
