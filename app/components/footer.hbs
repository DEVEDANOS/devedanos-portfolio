<footer class="flex flex-col w-full pt-12 pb-4 px-12 md:px-30 bg-black text-white">
  <div class="footer__content-wrapper md:flex md:flex-row md:content-between">
    <div class="footer__content--social-medias f-full md:w-1/2 lg:1/3">
      <h3 class="footer__content-title">{{t "footer.social-medias.title"}}</h3>
      <div class="footer-content__links-wrapper--social-medias">
        <ul class="flex flex-row space-x-4 mt-2">
          <li class="social-medias__list">
            <a href="https://www.twitter.com/daproclaima" class="social-medias__link">
              <img src="/assets/icons/twitter.svg"
                   alt="{{t "footer.social-media.links.twitter.alt"}}" class="filter-white"
              >
            </a>
          </li>
          <li>
            <a href="https://www.linkedin.com/in/snitpro/" class="social-medias__link">
              <img src="/assets/icons/linked-in.svg"
                   alt="{{t "footer.social-media.links.linked-in.alt"}}" class="filter-white"
              >
            </a>
          </li>
          <li>
            <a href="https://www.instagram.com/daproclaima" class="social-medias__link">
              <img src="/assets/icons/instagram.svg"
                   alt="{{t "footer.social-media.links.instagram.alt"}}" class="filter-white"
              >
            </a>
          </li>
          <li>
            <a href="https://www.facebook.com/SebastienNobour" class="social-medias__link">
              <img src="/assets/icons/facebook.svg"
                   alt="{{t "footer.social-media.links.facebook.alt"}}" class="filter-white"
              >
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="footer__content--quick-links f-full md:w-1/2 lg:1/3 mt-8 md:mt-0">
      <h3 class="footer__content-title">{{t "footer.quick-links.title"}}</h3>
      <ul class="footer-content__links-wrapper--quick-links list-none mt-2">
        <li>
          <LinkTo @route="index" class="text-white" aria-current="page">{{t "links.home"}}</LinkTo>
        </li>
        {{!--        <li><LinkTo @route="legal" class="text-white"  aria-current="page">{{t "links.legal"}}</LinkTo></li>--}}
      </ul>
    </div>
    <div class="footer__content--contacts f-full lg:1/3 mt-8 md:mt-0">
      <h3 class="footer__content-title">{{t "footer.contacts.title"}}</h3>
      <div class="footer__links-list-wrapper--contacts">
        <ul class="contacts__list flex flex-col mt-2">
          <li class="contacts__link flex flex-row">
            <img src="/assets/icons/phone.svg" alt="{{t "footer.contacts.phone.alt"}}" class="mr-3 filter-white">
            <a href="tel:+3358501427">{{t "footer.contacts.phone.title"}}</a>
          </li>
          <li class="contacts__link flex flex-row">
            <img src="/assets/icons/email.svg" alt="{{t "footer.contacts.phone.alt"}}" class="mr-3 filter-white">
            <a href="mailto: {{t "footer.contacts.email.title"}}">{{t "footer.contacts.email.title"}}</a>
          </li>
          <li class="contacts__link flex flex-row">
            <img src="/assets/icons/location-pin.svg" alt="{{t "footer.contacts.location.alt"}}" class="mr-3 filter-white">
            <a href="https://goo.gl/maps/1tHtvyCfWf3f1STF8">{{t "footer.contacts.location.title"}}</a>
          </li>
          <li class="contacts__link flex flex-row">
            <img src="/assets/icons/handshake.svg" alt="{{t "footer.contacts.vat.alt"}}" class="mr-3 filter-white">
            <ul>
              <li>{{t "footer.contacts.vat.siret"}}</li>
              <li>{{t "footer.contacts.vat.international"}}</li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer__credits flex flex-col mt-12 text-xs">
    <img class="w-4/12 sm:w-1/12 mx-auto mb-2" src="/assets/images/devedanos/web/svg/white-logo-no-background.svg"
         alt="{{t "devedanos-logo"}}">
    <p class="mx-auto">
      {{t "footer.credits.developed"}}
      <a href="https://jamstack.org/generators/empress-blog/">
        {{t "footer.credits.empress"}}
      </a>
      {{t "footer.credits.by"}}
    </p>
    <p class="mx-auto mt-2">
      <a href="https://github.com/SEBASTIEN-THIBAUT-NOBOUR/devedanos-portfolio">
        {{t "footer.credits.source-code"}}
      </a>
    </p>
  </div>
</footer>
