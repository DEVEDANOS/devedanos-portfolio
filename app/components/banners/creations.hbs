<div class="banner-background banner-background--creations">
  <section class="banner" id="banner-creations">
    <div class="banner__container banner__container--creations">
      <div class="banner__content banner__content--creations">
        <div class="banner__title banner__title--creations">
          <h2 class="text-center mb-2 md:mb-6 px-6 text-sm md:text-lg text-black">
          {{t 'pages.home.banners.creations.introduction'}}
          </h2>
          <h2 class="text-center pb-12 text-black">
            {{t 'pages.home.banners.creations.title'}}
          </h2>
        </div>
        <Carousels::Carousel>
          <Carousels::Card
            @url="https://www.nobour-eshop.com"
            @urlName="nobour-eshop"
            @description= {{t "pages.home.banners.creations.card.nobour-eshop.description" }}
            @imgSrc="{{this.rootURL}}assets/images/creations/nobour-eshop.png"
            @imgAlt= {{t "pages.home.banners.creations.card.nobour-eshop.alt" }}
          />
          <Carousels::Card
            @url="https://symreactcrm-nobour.herokuapp.com"
            @urlName="sym-react-crm"
            @description= {{t "pages.home.banners.creations.card.sym-react-crm.description" }}
            @imgSrc="{{this.rootURL}}assets/images/creations/sym-react-crm.png"
            @imgAlt= {{t "pages.home.banners.creations.card.sym-react-crm.alt" }}
          />
          <Carousels::Card
            @url="https://mowace-tech.com"
            @urlName="sym5BnB"
            @description= {{t "pages.home.banners.creations.card.sym-bnb.description" }}
            @imgSrc="{{this.rootURL}}assets/images/creations/sym-bnb.png"
            @imgAlt= {{t "pages.home.banners.creations.card.sym-bnb.alt" }}
          />

          <Carousels::Card
            @url="https://calendly.com/snitpro/1h"
            @urlName="coaching"
            @description= {{t "pages.home.banners.creations.card.coaching.description" htmlSafe=true }}
            @imgSrc="{{this.rootURL}}assets/images/creations/coaching.jpg"
            @imgAlt= {{t "pages.home.banners.creations.card.coaching.alt" }}
          />
        </Carousels::Carousel>
      </div>
    </div>
  </section>
</div>
