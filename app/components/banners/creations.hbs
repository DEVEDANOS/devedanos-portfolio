<div class="banner-background banner-background--creations">
  <section class="banner banner--creations" id="banner-creations">
    <div class="banner__container banner__container--creations">
      <div class="banner__content banner__content--creations">
        <div class="banner__top banner__top--creations">
          <h2 class="banner__title banner__title--creations">
            {{t 'pages.home.banners.creations.title'}}
          </h2>
        </div>
        <Carousels::Carousel>
          <Carousels::Card
            @url="https://www.nobour-eshop.com"
            @name="nobour-eshop"
            @description="{{t "pages.home.banners.creations.card.nobour-eshop.description" }}"
            @imgSrc="{{this.rootURL}}assets/images/creations/nobour-eshop.webp"
            @imgAlt= {{t "pages.home.banners.creations.card.nobour-eshop.alt" }}
          />
          <Carousels::Card
            @url="https://crm.devedanos.com"
            @name="sym-react-crm"
            @description="{{t "pages.home.banners.creations.card.sym-react-crm.description" }}"
            @imgSrc="{{this.rootURL}}assets/images/creations/sym-react-crm.webp"
            @imgAlt= {{t "pages.home.banners.creations.card.sym-react-crm.alt" }}
          />
          <Carousels::Card
            @url="https://calendly.com/snitpro/1h"
            @name="mentoring"
            @description={{t "pages.home.banners.creations.card.mentoring.description" htmlSafe=true}}
            @imgSrc="{{this.rootURL}}assets/images/creations/mentoring.webp"
            @imgAlt= {{t "pages.home.banners.creations.card.mentoring.alt" }}
          />
        </Carousels::Carousel>
      </div>
    </div>
  </section>
</div>
